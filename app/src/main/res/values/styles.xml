<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ✅ Typography Styles -->
    <style name="TextAppearance.SAGA.Title" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SAGA.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.SAGA.Heading" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SAGA.BodyMuted" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="TextAppearance.SAGA.Footer" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.6</item>
    </style>

    <!-- ✅ Primary CTA Button -->
    <style name="Widget.SAGA.CTAButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@drawable/bg_button_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">18dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <!-- ✅ Base Application Theme -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- System UI colors -->
        <item name="android:statusBarColor">@color/background_light_green</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background_light_green</item>

        <!-- Material 3 surface override (fixes white flashes) -->
        <item name="colorSurface">@color/background_light_green</item>
        <item name="colorSurfaceVariant">@color/card_background_green</item>
    </style>

    <!-- ✅ TextInputLayout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_green</item>
        <item name="hintTextColor">@color/dark_green</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- ✅ Button Styles -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/light_green</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <!-- Card Style -->
    <style name="CardStyle">
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="contentPadding">@dimen/padding_card</item>
        <item name="strokeColor">@color/border_color</item>
        <item name="strokeWidth">@dimen/border_width</item>
    </style>

    <!-- Text Styles -->
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextLabel">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingStart">@dimen/spacing_lg</item>
        <item name="android:paddingEnd">@dimen/spacing_lg</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/corner_radius_normal</item>
        <item name="elevation">@dimen/elevation_button</item>
    </style>

    <style name="ButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingStart">@dimen/spacing_lg</item>
        <item name="android:paddingEnd">@dimen/spacing_lg</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="strokeColor">@color/primary_green</item>
        <item name="strokeWidth">@dimen/border_width_thick</item>
        <item name="cornerRadius">@dimen/corner_radius_normal</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="strokeColor">@color/border_color</item>
        <item name="strokeWidth">@dimen/border_width</item>
    </style>

    <!-- Input Styles -->
    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_green</item>
        <item name="boxStrokeWidth">@dimen/border_width</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_normal</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_normal</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_normal</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_normal</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Icon Circle Background -->
    <style name="IconCircleStyle">
        <item name="android:layout_width">@dimen/avatar_size_small</item>
        <item name="android:layout_height">@dimen/avatar_size_small</item>
        <item name="android:background">@drawable/bg_icon_circle</item>
    </style>

    <!-- Divider Style -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/border_width</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>
