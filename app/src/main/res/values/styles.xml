<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ✅ Typography Styles -->
    <style name="TextAppearance.SAGA.Title" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SAGA.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.SAGA.Heading" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SAGA.BodyMuted" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="TextAppearance.SAGA.Footer" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.6</item>
    </style>

    <!-- ✅ Primary CTA Button -->
    <style name="Widget.SAGA.CTAButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@drawable/bg_button_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">18dp</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>
