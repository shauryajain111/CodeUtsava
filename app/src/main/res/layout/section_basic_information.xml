<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="24dp">

    <!-- Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/basic_information"
        android:textColor="@color/deep_green"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_background_green"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/border_green"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Patient Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="@string/patient_name"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/light_green"
                app:boxStrokeColor="@color/light_green"
                app:hintTextColor="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_patient_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:textColor="@color/text_primary"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/full_legal_name"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <!-- Age and Gender Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="2">

                <!-- Age -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="@string/age"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="@color/light_green"
                    app:boxStrokeColor="@color/light_green"
                    app:hintTextColor="@color/dark_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:textColor="@color/text_primary"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Gender Spinner -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Contact Number -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="@string/contact_number_optional"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/light_green"
                app:boxStrokeColor="@color/light_green"
                app:hintTextColor="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:textColor="@color/text_primary"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Date of Visit -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="@string/date_of_visit"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="@color/light_green"
                app:boxStrokeColor="@color/light_green"
                app:hintTextColor="@color/dark_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_date_of_visit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:textColor="@color/text_secondary"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/auto_filled_date"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <!-- Category Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/dark_green"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
