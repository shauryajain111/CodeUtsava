<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="24dp">

    <!-- Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/optional_attachments"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_background_green"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/border_green"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Upload Lesion Photo Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_lesion_photo"
                android:textColor="@color/dark_green"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:drawableStart="@drawable/ic_upload"
                android:drawableTint="@color/light_green"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Upload Photo Container -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/border_light_green"
                app:strokeWidth="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_upload"
                        app:tint="@color/light_green"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_uploaded_file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tap_to_upload"
                        android:textColor="@color/dark_green"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/image_upload_info"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_choose_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_file"
                        android:textColor="@color/dark_green"
                        app:strokeColor="@color/light_green"
                        app:strokeWidth="2dp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Doctor's Notes / Remarks -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor_notes"
                android:textColor="@color/dark_green"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:drawableStart="@drawable/ic_sticky_note"
                android:drawableTint="@color/light_green"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_doctor_notes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:hint="@string/doctor_notes_hint"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/text_primary"
                android:gravity="top|start"
                android:inputType="textMultiLine" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
